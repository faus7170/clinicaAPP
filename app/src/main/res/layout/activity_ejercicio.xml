<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_gradient"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.exercise.ExerciseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azulprincipal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnVolverExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/azulprincipal"
                android:contentDescription="@string/button_volver"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_back" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:titleTextColor="@color/white"
                app:title="@string/ejercicios" />
        </LinearLayout>
        <SearchView
            android:id="@+id/searchViewEjerc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEjercicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scrollbarThumbHorizontal="@drawable/background_gradient"
        android:scrollbarThumbVertical="@drawable/background_gradient"
        app:cardBackgroundColor="@android:color/transparent"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>